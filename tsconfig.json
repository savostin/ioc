{
  "compilerOptions": {
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "stripInternal": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "es2015",
    "module": "commonjs"
  },
  "include": ["./src/"],
  "exclude": ["./tests/"]
}
